{
	"background": {
		"scripts" : [
			"js/main.js",
			"js/difi.js",
			"js/utils.js",
			"js/prefs_lib.js",
			"js/prefs.js",
			"js/dn.js",
			"js/errors.js"
		]
	},
	"browser_action": {
		"default_icon": "img/dan_logo2_19_crisp.png",
		"default_popup": "popup.html"
	},
	"description": "A notifier for deviantART messages. Keep track of your dA inbox!",
	"homepage_url": "http://danotifier.deviantart.com/",
	"update_url": "http://dl.dropbox.com/u/5844031/update_danb.xml",
	"icons": {
		"128": "img/dan_logo2_128_padded.png",
		"48": "img/dan_logo2_48.png",
		"16": "img/dan_logo2_16_crisp.png"
	},
	"name": "dA Message Notifier",
	"minimum_chrome_version": "16",
	"options_page": "options.html",
	"permissions": [ 
		"notifications",
		"tabs",
		"*://*.deviantart.com/",
		"clipboardWrite"
	],
	"optional_permissions": [ "background" ],
	"content_scripts": [ 
		{ 
			"matches": [
				"*://*.deviantart.com/messages/", 
				"*://*.deviantart.com/messages/?random=*"
			], "js": ["js/inject.js"], "run_at": "document_start" 
		},
		{ 
			"matches": [
				"https://*.deviantart.com/*"
			], "js": ["js/https-ify.js"], "run_at": "document_start" 
		}
	],
	"version": "0.7.0.5",
	"manifest_version": 2
}
